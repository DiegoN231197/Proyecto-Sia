    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        JFileChooser dlg= new JFileChooser();
        int option= dlg.showSaveDialog(this);
        if(option ==JFileChooser.APPROVE_OPTION){
            File f= dlg.getSelectedFile();
            txtRuta.setText(f.toString());
        }
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String ruta=txtRuta.getText();
        String contenido=txtContenido.getText();
        try{
            FileOutputStream archivo= new FileOutputStream(ruta+ ".pdf");
            Document doc= new Document();
            PdfWriter.getInstance(doc, archivo);
            doc.open();
            doc.add(new Paragraph(contenido));
            doc.close();
            JOptionPane.showMessageDialog(null,"PDF correctamente creado");
            
            
        }catch(Exception e){
            JOptionPane.showMessageDialog(null,"Error al crear PDF"+e.getMessage());
            
        }
                
    
               
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        MuestraNegocios obj= new MuestraNegocios();
        obj.setVisible(true);

    }                                        

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        MuestraCervezas obj= new MuestraCervezas();
        obj.setVisible(true);
    }                                        

