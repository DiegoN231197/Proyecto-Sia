    private void btnGuardarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        insertarDatos();
        limpiarCajas(); 
        mostrarDatos();
    }                                          

    private void btnLimpiarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        limpiarCajas(); 
    }                                          

    private void TablaNegociosMouseClicked(java.awt.event.MouseEvent evt) {                                           
        int filaSeleccionada= TablaNegocios.rowAtPoint(evt.getPoint());
        txtCodNegocio.setText(TablaNegocios.getValueAt(filaSeleccionada, 0).toString());
        txtRut.setText(TablaNegocios.getValueAt(filaSeleccionada, 1).toString());
        txtNombre.setText(TablaNegocios.getValueAt(filaSeleccionada, 2).toString());
        txtDireccion.setText(TablaNegocios.getValueAt(filaSeleccionada, 3).toString());
        txtTelefono.setText(TablaNegocios.getValueAt(filaSeleccionada, 4).toString());
    }                                          

    private void btnActualizarActionPerformed(java.awt.event.ActionEvent evt) {                                              
        ActualizarDatos();
        limpiarCajas();
        mostrarDatos();
    }                                             

    private void btnEliminarActionPerformed(java.awt.event.ActionEvent evt) {                                            
        eliminarRegistros();
        mostrarDatos();
        limpiarCajas();
    }                                           

    private void txtBuscarKeyReleased(java.awt.event.KeyEvent evt) {                                      
        filtrarDatos(txtBuscar.getText());
    }                                     

