    public void limpiarCajas(){
    
    txtCodNegocio.setText("");
    txtRut.setText("");
    txtNombre.setText("");
    txtDireccion.setText("");
    txtTelefono.setText("");
}
    
public void insertarDatos(){
    
    try{
        String SQL="insert into negocio(cod_negocio,rut,nombre,direccion,telefono) values(?,?,?,?,? ) ";
        PreparedStatement pst=con.prepareStatement(SQL);
        
        pst.setInt(1,Integer.parseInt(txtCodNegocio.getText()));
        pst.setInt(2,Integer.parseInt(txtRut.getText()));
        pst.setString(3,txtNombre.getText());
        pst.setString(4,txtDireccion.getText());
        pst.setInt(5,Integer.parseInt(txtTelefono.getText()));
        pst.execute();
        JOptionPane.showMessageDialog(null,"Registro Exitoso" );
        
        
    }catch(Exception e){
        JOptionPane.showMessageDialog(null,"Error de registros"+ e.getMessage() );
    }
} 

public void ActualizarDatos(){
    
    try{
        String SQL="update negocio set cod_negocio=?,rut=?,nombre=?,direccion=?,telefono=? where cod_negocio=?  ";
        int filaSeleccionado=TablaNegocios.getSelectedRow();
        String dao=(String)TablaNegocios.getValueAt(filaSeleccionado, 0);
        PreparedStatement pst=con.prepareStatement(SQL);
        
        pst.setInt(1,Integer.parseInt(txtCodNegocio.getText()));
        pst.setInt(2,Integer.parseInt(txtRut.getText()));
        pst.setString(3,txtNombre.getText());
        pst.setString(4,txtDireccion.getText());
        pst.setInt(5,Integer.parseInt(txtTelefono.getText()));
        
        pst.setString(6, dao);
        pst.execute();
        JOptionPane.showMessageDialog(null,"Registro Editado Exitoso" );
        
        
    }catch(Exception e){
        JOptionPane.showMessageDialog(null,"Error de edicion"+ e.getMessage() );
    }
}
public void eliminarRegistros(){
        int filaSeleccionada=TablaNegocios.getSelectedRow();
        
        try{
            String SQL="delete from negocio where cod_negocio="+TablaNegocios.getValueAt(filaSeleccionada, 0);
            Statement st=con.createStatement();
            int n= st.executeUpdate(SQL);
            if(n>=0){
                JOptionPane.showMessageDialog(null, "Registro Eliminado");
            }
            
            
        }catch(Exception e){
            JOptionPane.showMessageDialog(null, "Error al eliminar registro"+ e.getMessage());
            
        }
    }

public void mostrarDatos(){
    String [] titulos= {"cod_negocio","Rut","Nombre","Direccion","Telefono"};
    String [] registros= new String[6];
    DefaultTableModel modelo=new DefaultTableModel(null,titulos);
    String SQL="select * from negocio";
    try{
        Statement st=con.createStatement();
        ResultSet rs=st.executeQuery(SQL);
        while(rs.next()){
            
        registros[0]=rs.getString("cod_negocio");
        registros[1]=rs.getString("rut");
        registros[2]=rs.getString("nombre");
        registros[3]=rs.getString("direccion");
        registros[4]=rs.getString("telefono");
        
        modelo.addRow(registros);
        
        }
        
        TablaNegocios.setModel(modelo);
        
    }catch(Exception e){
        JOptionPane.showMessageDialog(null,"Error al mostrar datos" + e.getMessage());
        
    }
}

public void filtrarDatos(String valor){
    String [] titulos= {"cod_negocio","Rut","Nombre","Direccion","Telefono"};
    String [] registros= new String[6];
    DefaultTableModel modelo=new DefaultTableModel(null,titulos);
    String SQL="select * from negocio where nombre like '%" + valor +"%'";
    try{
        Statement st=con.createStatement();
        ResultSet rs=st.executeQuery(SQL);
        while(rs.next()){
            
        registros[0]=rs.getString("cod_negocio");
        registros[1]=rs.getString("rut");
        registros[2]=rs.getString("nombre");
        registros[3]=rs.getString("direccion");
        registros[4]=rs.getString("telefono");
        
        modelo.addRow(registros);
        
        }
        
        TablaNegocios.setModel(modelo);
        
    }catch(Exception e){
        JOptionPane.showMessageDialog(null,"Error al mostrar datos" + e.getMessage());
        
    }
}

    
   

