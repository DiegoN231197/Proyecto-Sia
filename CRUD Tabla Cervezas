    private void btnGuardarActionPerformed(java.awt.event.ActionEvent evt) {                                           

        insertarDatos();
        limpiarCajas(); 
        mostrarDatos();
    }                                          

    private void TablaCervezasMouseClicked(java.awt.event.MouseEvent evt) {                                           
        int filaSeleccionada= TablaCervezas.rowAtPoint(evt.getPoint());
        txtCodCerveza.setText(TablaCervezas.getValueAt(filaSeleccionada, 0).toString());
        txtNombre.setText(TablaCervezas.getValueAt(filaSeleccionada, 1).toString());
        txtPrecio.setText(TablaCervezas.getValueAt(filaSeleccionada, 2).toString());
      
        cbSabor.setSelectedItem(TablaCervezas.getValueAt(filaSeleccionada, 3));
        cbCaducidad.setSelectedItem(TablaCervezas.getValueAt(filaSeleccionada, 4));
    }                                          

    private void btnLimpiarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        limpiarCajas();
    }                                          

    private void btnActualizarActionPerformed(java.awt.event.ActionEvent evt) {                                              
        ActualizarDatos();
        limpiarCajas();
        mostrarDatos();
    }                                             

    private void btnEliminarActionPerformed(java.awt.event.ActionEvent evt) {                                            
        eliminarRegistros();
        mostrarDatos();
        limpiarCajas();
    }                                           

    private void txtBuscarKeyReleased(java.awt.event.KeyEvent evt) {                                      
        filtrarDatos(txtBuscar.getText());
    }                                     

    private void codigosSaborActionPerformed(java.awt.event.ActionEvent evt) {                                             
        Sabores obj=new Sabores();
        obj.setVisible(true);
    }                                            

    private void CodigosCaducidadActionPerformed(java.awt.event.ActionEvent evt) {                                                 
        CodigosCaducidad obj= new CodigosCaducidad();
        obj.setVisible(true);
    }                                                

