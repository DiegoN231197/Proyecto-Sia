public void insertarDatos(){
    
    try{
        String SQL="insert into Cerveza(cod_cerveza,nombre,precio,sabor_cod,caducidad_cod) values(?,?,?,?,? ) ";
        PreparedStatement pst=con.prepareStatement(SQL);
        
        pst.setInt(1,Integer.parseInt(txtCodCerveza.getText()));
        pst.setString(2,txtNombre.getText());
        pst.setInt(3,Integer.parseInt(txtPrecio.getText()));
        int seleccionadoSab=cbSabor.getSelectedIndex();
        pst.setString(4,cbSabor.getItemAt(seleccionadoSab));
        int seleccionadoCad=cbCaducidad.getSelectedIndex();
        pst.setString(5,cbCaducidad.getItemAt(seleccionadoCad));
        pst.execute();
        JOptionPane.showMessageDialog(null,"Registro Exitoso" );
        
        
    }catch(Exception e){
        JOptionPane.showMessageDialog(null,"Error de registros"+ e.getMessage() );
    }
} 

public void mostrarDatos(){
    String [] titulos= {"Código Cerveza","Nombre","Precio","Código Sabor","Código Caducidad"};
    String [] registros= new String[6];
    DefaultTableModel modelo=new DefaultTableModel(null,titulos);
    String SQL="select Cerveza.cod_cerveza, Cerveza.nombre, Cerveza.precio, Sabor.tipo, Caducidad.fecha\n" +
"from Cerveza\n" +
"join Sabor on Cerveza.sabor_cod = Sabor.cod_sabor\n" +
"join Caducidad on Cerveza.caducidad_cod = Caducidad.cod_caducidad";
    try{
        Statement st=con.createStatement();
        ResultSet rs=st.executeQuery(SQL);
        while(rs.next()){
            
        registros[0]=rs.getString("cod_cerveza");
        registros[1]=rs.getString("nombre");
        registros[2]=rs.getString("precio");
        registros[3]=rs.getString("tipo");
        registros[4]=rs.getString("fecha");
        
        modelo.addRow(registros);
        
        }
        
        TablaCervezas.setModel(modelo);
        
    }catch(Exception e){
        JOptionPane.showMessageDialog(null,"Error al mostrar datos" + e.getMessage());
        
    }
}

public void filtrarDatos(String valor){
    String [] titulos= {"cod_cerveza","Nombre","Precio","sabor_cod","caducidad_cod"};
    String [] registros= new String[7];
    DefaultTableModel modelo=new DefaultTableModel(null,titulos);
    String SQL="select * from Cerveza where nombre like '%" + valor +"%'";
    try{
        Statement st=con.createStatement();
        ResultSet rs=st.executeQuery(SQL);
        while(rs.next()){
            
        registros[0]=rs.getString("cod_cerveza");
        registros[1]=rs.getString("nombre");
        registros[2]=rs.getString("precio");
        registros[3]=rs.getString("sabor_cod");
        registros[4]=rs.getString("caducidad_cod");
        
        modelo.addRow(registros);
        
        }
        
        TablaCervezas.setModel(modelo);
        
    }catch(Exception e){
        JOptionPane.showMessageDialog(null,"Error al mostrar datos" + e.getMessage());
        
    }
}

 public void eliminarRegistros(){
        int filaSeleccionada=TablaCervezas.getSelectedRow();
        
        try{
            String SQL="delete from Cerveza where cod_cerveza="+TablaCervezas.getValueAt(filaSeleccionada, 0);
            Statement st=con.createStatement();
            int n= st.executeUpdate(SQL);
            if(n>=0){
                JOptionPane.showMessageDialog(null, "Registro Eliminado");
            }
            
            
        }catch(Exception e){
            JOptionPane.showMessageDialog(null, "Error al eliminar registro"+ e.getMessage());
            
        }
    }

public void limpiarCajas(){
    
    txtCodCerveza.setText("");
    txtNombre.setText("");
    txtPrecio.setText("");
    cbSabor.setSelectedItem(null);
    cbCaducidad.setSelectedItem(null);
}


public void ActualizarDatos(){
    
    try{
        String SQL="update Cerveza set cod_cerveza=?,nombre=?,precio=?,sabor_cod=?,caducidad_cod=? where cod_cerveza=?  ";
        int filaSeleccionado=TablaCervezas.getSelectedRow();
        String dao=(String)TablaCervezas.getValueAt(filaSeleccionado, 0);
        PreparedStatement pst=con.prepareStatement(SQL);
        
        pst.setInt(1,Integer.parseInt(txtCodCerveza.getText()));
        pst.setString(2,txtNombre.getText());
        pst.setInt(3,Integer.parseInt(txtPrecio.getText()));
        int seleccionadoSab=cbSabor.getSelectedIndex();
        pst.setString(4,cbSabor.getItemAt(seleccionadoSab));
        int seleccionadoCad=cbCaducidad.getSelectedIndex();
        pst.setString(5,cbCaducidad.getItemAt(seleccionadoCad));
        
        pst.setString(6, dao);
        pst.execute();
        JOptionPane.showMessageDialog(null,"Registro Editado Exitoso" );
        
        
    }catch(Exception e){
        JOptionPane.showMessageDialog(null,"Error de edicion"+ e.getMessage() );
    }
}




