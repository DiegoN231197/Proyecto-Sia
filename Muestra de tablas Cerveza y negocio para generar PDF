    public void mostrarDatos(){
    String [] titulos= {"Código Cerveza","Nombre","Precio","Código Sabor","Código Caducidad"};
    String [] registros= new String[6];
    DefaultTableModel modelo=new DefaultTableModel(null,titulos);
    String SQL="select Cerveza.cod_cerveza, Cerveza.nombre, Cerveza.precio, Sabor.tipo, Caducidad.fecha\n" +
"from Cerveza\n" +
"join Sabor on Cerveza.sabor_cod = Sabor.cod_sabor\n" +
"join Caducidad on Cerveza.caducidad_cod = Caducidad.cod_caducidad";
    try{
        Statement st=con.createStatement();
        ResultSet rs=st.executeQuery(SQL);
        while(rs.next()){
            
        registros[0]=rs.getString("cod_cerveza");
        registros[1]=rs.getString("nombre");
        registros[2]=rs.getString("precio");
        registros[3]=rs.getString("tipo");
        registros[4]=rs.getString("fecha");
        
        modelo.addRow(registros);
        
        }
        
        TablaMuestraCervezas.setModel(modelo);
        
    }catch(Exception e){
        JOptionPane.showMessageDialog(null,"Error al mostrar datos" + e.getMessage());
        
    }
    
    
}
    
    public void filtrarDatos(String valor){
    String [] titulos= {"cod_cerveza","Nombre","Precio","sabor_cod","caducidad_cod"};
    String [] registros= new String[7];
    DefaultTableModel modelo=new DefaultTableModel(null,titulos);
    String SQL="select * from Cerveza where nombre like '%" + valor +"%'";
    try{
        Statement st=con.createStatement();
        ResultSet rs=st.executeQuery(SQL);
        while(rs.next()){
            
        registros[0]=rs.getString("cod_cerveza");
        registros[1]=rs.getString("nombre");
        registros[2]=rs.getString("precio");
        registros[3]=rs.getString("sabor_cod");
        registros[4]=rs.getString("caducidad_cod");
        
        modelo.addRow(registros);
        
        }
        
        TablaMuestraCervezas.setModel(modelo);
        
    }catch(Exception e){
        JOptionPane.showMessageDialog(null,"Error al mostrar datos" + e.getMessage());
        
    }
}

